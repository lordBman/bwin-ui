cmake_minimum_required(VERSION 3.15...3.31)
cmake_policy(SET CMP0091 NEW)
cmake_policy(SET CMP0042 NEW)

project(engine VERSION 1.0.0 LANGUAGES CXX)
set(CMAKE_CXX_STANDARD 20)

add_definitions(-DNAPI_VERSION=9)

file(GLOB SOURCE_FILES "src/cpp/*")
include_directories(${CMAKE_JS_INC} "src/cpp")

add_subdirectory("wxWidget")
include(${wxWidgets_USE_FILE})
find_package(wxWidgets COMPONENTS wx::net wx::core wx::base REQUIRED)
target_link_libraries(wxWidgets PRIVATE ${wxWidgets_LIBRARIES})

add_library(${PROJECT_NAME} SHARED ${SOURCE_FILES} ${CMAKE_JS_SRC})
set_target_properties(${PROJECT_NAME} PROPERTIES PREFIX "" SUFFIX ".node")
target_include_directories(${PROJECT_NAME} PRIVATE ${CMAKE_JS_INC})
target_link_libraries(${PROJECT_NAME} PRIVATE ${CMAKE_JS_LIB})
target_compile_features(${PROJECT_NAME} PRIVATE cxx_std_20)

